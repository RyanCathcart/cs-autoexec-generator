<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="CSAutoexecGenerator.Components.SliderSetting"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">

    <VerticalStackLayout BindingContext="{x:Reference this}" Spacing="10">

        <Label
            FontSize="Title"
            Text="{Binding Title}"
            VerticalOptions="Center" />

        <Label
            Text="{Binding Description}"
            TextColor="Gray"
            VerticalOptions="Center" />

        <HorizontalStackLayout Spacing="25">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Slider
                    x:Name="SettingSlider"
                    Grid.ColumnSpan="2"
                    Maximum="{Binding Maximum}"
                    Minimum="{Binding Minimum}"
                    ValueChanged="OnSliderValueChanged"
                    VerticalOptions="Center"
                    WidthRequest="400" />

                <Label Grid.Row="1" Text="{Binding Minimum}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalTextAlignment="End"
                    Text="{Binding Maximum}" />
            </Grid>

            <Entry
                x:Name="SliderValueEntry"
                Completed="OnEntryCompleted"
                FontSize="Micro"
                MaxLength="4"
                VerticalOptions="Center" />

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
